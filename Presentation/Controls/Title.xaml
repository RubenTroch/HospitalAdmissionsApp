<UserControl x:Class="HospitalAdmissionsApp.Presentation.Components.Title"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Name="root">
    <UserControl.ContentTemplate>
        <DataTemplate>
            <TextBlock Text="{Binding Text, ElementName=root}" FontWeight="Bold" FontSize="36" />
        </DataTemplate>
    </UserControl.ContentTemplate>
</UserControl>