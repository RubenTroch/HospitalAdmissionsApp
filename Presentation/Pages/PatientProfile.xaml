<Page x:Class="HospitalAdmissionsApp.Presentation.Pages.PatientProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="clr-namespace:HospitalAdmissionsApp.Presentation.Components">
      
      <Grid Margin="40 60">
            <Grid.RowDefinitions>
                  <RowDefinition Height="*" MinHeight="60" />
                  <RowDefinition Height="11*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="1.5*" />
                  <ColumnDefinition Width="*" MinWidth="200" />
                  <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <components:Title Text="Patient" Grid.Row="0" Grid.Column="1" />
            
            <StackPanel Grid.Row="1" Grid.Column="1">
                  <Label Content="Name" />
                  <TextBox></TextBox>

                  <Label Content="Age" />
                  <TextBox></TextBox>

                  <Label Content="Sex" />
                  <TextBox></TextBox>

                  <Label Content="Weight" />
                  <TextBox></TextBox>

                  <StackPanel HorizontalAlignment="Right" Margin="0 40" >
                        <Button Content="Add patient" Padding="10 5" />
                  </StackPanel>
            </StackPanel>
      </Grid>
</Page>